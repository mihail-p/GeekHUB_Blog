{% if countTag is defined %}
    <div class="sidebar-module sidebar-module-inset">
        <div id="myCanvasContainer">
            <canvas width="230" height="230" id="myCanvas">
                <p>Anything in here will be replaced on browsers that support the canvas element</p>
                <ul>
                    {% for key, value in countTag %}
                        <a id="tags"
                           href="{{ path('postsWithTag', {'tag': key }) }}">
                            {{ key }}
                        </a>
                    {% endfor %}
                </ul>
            </canvas>
        </div>
    </div>
    {% for key, value in countTag %}
        <a id="tags"
           href="{{ path('postsWithTag', {'tag': key }) }}">
            <span style="font-size: {{ 12 + value }}pt">{{ key }}<small>({{ value }})</small></span>
        </a>
    {% endfor %}
    <br><br>
{% endif %}