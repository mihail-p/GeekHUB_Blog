<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
    
    <parameters>
        <parameter key="textSent">Sentence in XML</parameter>
    </parameters>
    
    <services>
        <service id="app.manager" class="AppBundle\Services\ServiceManager">
            <call method="setEny">
                <argument>%textsent%</argument>
            </call>
        </service>
        <service id="app.twig.big_char" class="AppBundle\TwigExt\BigChar">
            <tag name="twig.extension" />
        </service>
        <service id="app.post_voter"
                 class="AppBundle\Security\CommentVoter"
                 public="false" >
            <tag name="security.voter" />
        </service>
    </services>
</container>